<div class="border-form-div">
  <h2>Resend confirmation instructions</h2>
  <%= bootstrap_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.text_field :email, autofocus: true, placeholder: "Email address" %>

    <%= f.submit "Reset confirmation instructions", class: "btn btn-sm btn-primary" %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>