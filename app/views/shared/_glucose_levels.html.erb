<div class="row">
  <div class="col-lg-12">
    <h4 class="page-header">
      Glucose Level Summary for the day
		<small><%= Date.today.strftime("#{Date.today.day.ordinalize} %B %Y") %></small>
    </h4>
		<div class="col-lg-12">
			<%- levels = glucose_levels %>
			<% if levels.count > 0 %>
			  <div class="table-responsive">
			    <table class="table table-striped table-hover">
			      <thead>
			        <tr>
			          <th class="text-center">Sl #</th>
			          <th class="text-center">Glucose Level</th>
			        </tr>
			      </thead>
			      <tbody>
			        <% current_user.get_levels.each_with_index do |g_level, index| %>
			          <tr>
			            <td class="text-center">
			              <%= index + 1 %>
			            </td>
			            <td class="text-center">
			              <%= g_level.level %>
			            </td>
			          </tr>
			        <% end %>
			      </tbody>
			    </table>
			  </div>
			<% end %>
			<% if levels.count < 4 %>
				<div class="text-center">
					<%= link_to "Add glucose level now", new_glucose_level_path, :class => "btn btn-sm btn-primary" %>
				</div>
			<% end %>
		  <div class="clear"></div>
		</div>
    <div class="clear"></div>
  </div>
</div>
<div class="clear"></div>
